<Window x:Class="TocchioMaratonaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TocchioMaratonaApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="BtnLeggiDaFile" Content="Leggi da file" Click="BtnLeggiDaFile_Click"/>
        <DataGrid x:Name="DgElencoBrani" Height="300" />
        <Label Content="Inserisci il nome del titolo:"/>
        <TextBox x:Name="TxtTitolo" />
        <Label x:Name="LblArtista" />
        <Button x:Name="BtnCercaArtista" Content="Cerca Artista" Click="BtnCercaArtista_Click"/>
        <Label Content="Inserisci il nome dell'album:"/>
        <TextBox x:Name="TxtAlbum" />
        <Label x:Name="LblNumBrani" />
        <Button x:Name="BtnContaBrani" Content="Conta Brani" Click="BtnContaBrani_Click"/>
        <Label x:Name="LblDurata" />
        <Button x:Name="BtnDurata" Content="Calcola durata totale" Click="BtnDurata_Click"/>
    </StackPanel>
</Window>
