        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TocchioMaratonaApp"
        mc:Ignorable="d"
        Title="Maratoneeeeeeeeeee" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="BtnLeggiDaFile" Content="Leggi da file" Click="BtnLeggiDaFile_Click"/>
        <DataGrid x:Name="DgElencoMaratone" Height="300" />
       
        <Label x:Name="LblNumMaratone" />
        
        <Label x:Name="LblDurata" />
        <Button x:Name="BtnDurata" Content="Calcola durata totale" Click="BtnDurata_Click"/>
    </StackPanel>
</Window>
